{
	"extends": ["airbnb", "prettier", "prettier/react", "plugin:prettier/recommended"],
	"plugins": ["react", "prettier", "jest"],
	"parser": "babel-eslint",
	"rules": {
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js", "jsx"]
			}
		],
		"react/require-default-props": 0,
		"prettier/prettier": "error",
		"max-len": ["error", 170],
		"strict": 0
	},
	"env": {
		"browser": true,
		"jest/globals": true
	},
	"settings": {
		"import/resolver": {
			"webpack": {
				"config": "./webpack.config.js"
			}
		}
	}
}
